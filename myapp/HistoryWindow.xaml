<Window x:Class="myapp.HistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:myapp" xmlns:viewmodel="clr-namespace:myapp.MVVM.ViewModel"
        mc:Ignorable="d"
        Title="HistoryWindow" Height="450" Width="800">
    <Window.DataContext>
        <viewmodel:HistoryViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid Margin="0,0,642,0">

            <ListView ItemsSource="{Binding History}" BorderThickness="0" Margin="8,0,0,0" Grid.Row="1">

            </ListView>
            
    </Grid>
    </Grid>
</Window>
